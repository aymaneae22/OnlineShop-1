<%- include('parts/header') %> 
<%- include('parts/navbar') %> 
<div class="container text-center">
  <h3>Login</h3>
  <form action="/login" method="POST">
    <input type="email" class="form-control" name="email" placeholder="E-mail">
    <% let emailLError = loginVErrors.find(err => err.param === 'email')  %>
    <% if (emailLError) {  %> 
      <p class="alert alert-danger"><%= emailLError.msg %> </p>
      <% } %>  
    <input type="password" class="form-control" name="password" placeholder="Password">
    <% let passwordLError = loginVErrors.find(err => err.param === 'password')  %>
    <% if (passwordLError) {  %> 
      <p class="alert alert-danger"><%= passwordLError.msg %> </p> 
      <% } %> 
    <input type="submit" value="Login" class="btn btn-primary">
  </form>
  <% if (authError) {  %> 
  <p class="alert alert-danger"><%= authError %> </p>
  <% } %> 
  <br>
  <div>Don't have account? <a href="/signup">Create Account</a></div>
</div>


<%- include('parts/footer') %> 